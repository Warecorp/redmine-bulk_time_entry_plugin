<p id="entry_<%= rnd %>_activities">
  <%= label_for_field :activity_id, rnd, :required => true %>
  <% if activities.present? %>
    <%= select_tag "time_entries[#{rnd}][activity_id]", options_from_collection_for_select(activities, :id, :name, @selected_activity) %>
  <% else %>
    <em><%= l(:label_no_data) %></em>
  <% end %>
</p>
