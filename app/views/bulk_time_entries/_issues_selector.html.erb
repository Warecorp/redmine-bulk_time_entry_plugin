<p id="entry_<%= rnd %>_issues">
  <%= label_for_field :issue_id, rnd %>
  <% if @issues.nil? || @issues.empty? %>
    <em><%= l(:label_no_data) %></em>
  <% else %>
    <%= select_tag "time_entries[#{rnd}][issue_id]", grouped_options_for_issues(@issues, @selected_issue), :style => 'max-width: 95%;' %>
  <% end %>
</p>
